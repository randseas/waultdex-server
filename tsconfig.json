{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "rootDir": ".",
    "checkJs": false,
    "outDir": "./build",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "typeRoots": ["./*"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "build"]
}
